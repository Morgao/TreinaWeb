#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	
	float custoFinal, custoDeFabrica, porcentagemDoDistribuidor, impostos;
	
	
	printf("digite o custo de fabrica ");
	scanf("%f",&custoDeFabrica);
	printf("digite a porcentagem ");
	scanf("%f",&porcentagemDoDistribuidor);
	printf("digite o imposto ");
	scanf("%f",&impostos);
	custoFinal = custoDeFabrica + ((porcentagemDoDistribuidor/100) * custoDeFabrica) + ((impostos/100)*custoDeFabrica) ;
	printf("valor final: %.2f\n",custoFinal);

	return 0;
}
