#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	float area, raio;
	const float pi = 3.1415;
	
	printf("digite valor do raio: \n");
	scanf("%f",&raio);
	
	area = pi * (raio*raio);
	
	printf("area vale: %2.f\n",area);
	return 0;
}
